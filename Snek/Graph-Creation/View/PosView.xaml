                            <TextBlock Margin="5,0,0,0" Text="{Binding Path=Stunden}" FontSize="12"></TextBlock>
                            <TextBlock Margin="5,0,0,0" Text="{Binding Path=Minuten}" FontSize="12"></TextBlock>
